<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:gravity="center">

    <com.wsg.kuxuanmedia.view.MyVideoView
        android:id="@+id/activity_videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>


    <include
        android:id="@+id/media_rl_controller"
        layout="@layout/media_controller"
        ></include>

    <include
        android:id="@+id/ll_buffer"
        layout="@layout/ll_buffer"
        android:visibility="gone"></include>

    <include
        android:id="@+id/ll_loading"
        layout="@layout/ll_loading"
        android:visibility="gone"></include>

</RelativeLayout>