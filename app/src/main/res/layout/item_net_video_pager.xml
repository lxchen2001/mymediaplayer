<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="5dp"
    >

    <RelativeLayout
        android:id="@+id/item_net_videopager_rl"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/item_net_videopager_img"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/video_default"
            />

        <ImageView
            android:id="@+id/item_net_videopager_img_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/center_collect_play"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_net_videopager_rl"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/item_net_videopager_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="薛之谦好帅啊"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/item_net_videopager_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:text="永不回头，就是很帅"
            android:textColor="#55000000"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            />
    </LinearLayout>
</RelativeLayout>