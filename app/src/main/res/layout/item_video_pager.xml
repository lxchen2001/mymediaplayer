<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:padding="5dp"
    >
    <ImageView
        android:layout_centerVertical="true"
        android:src="@drawable/video_default_icon"
        android:id="@+id/item_videopager_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        />
    <LinearLayout
        android:paddingLeft="5dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/item_videopager_img"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_videopager_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="片名"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:paddingTop="5dp"
            android:id="@+id/item_videopager_tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时长"
            android:textSize="16sp"
            android:textColor="#55000000"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/item_videopager_tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大小"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/item_videopager_img"
        />
</RelativeLayout>